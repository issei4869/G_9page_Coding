<% project='.' ; ejsPath='.' 

let cards = [
    {
        img: './assets/images/common/top-about1.jpg' , 
        alt: 'クレーンカメラが設置されている様子',
        text: 'クレーン、リモートヘッド、ドリー等あらゆる撮影に最適な機材を取り揃えております。',
        number: '01',
        btntext: '特殊機材',
        link: 'equipment.html#equipment',
        color: ''
    },
    {
        img: './assets/images/common/top-about2.jpg' , 
        alt: '雨の中で撮影をしている様子',
        text: 'あらゆる天候を人工的につくりだす装置を取り揃えております。',
        number: '02',
        btntext: '特殊効果',
        link: 'equipment.html#effects',
        color: 'inversion'
    },
    {
        img: './assets/images/common/top-about3.jpg' , 
        alt: '天気のいい中、骨組みが設置されている様子',
        text: '便利なスポット利用を可能にするレンタル機材を各種取り揃えております',
        number: '03',
        btntext: 'レンタル機材',
        link: 'equipment.html#rental',
        color: ''
    }
]

%>


<div class="p-top-about">
    <div class="p-top-about__inner l-inner">
        <div class="p-top-about__heading">
            <%- include(ejsPath + './component/_c-section-heading', { 
                page: "", 
                heading_eng:'About', 
                heading_ja:'有限会社グリフィス',
                anima:'text'
            }) %>
        </div>
        <p class="p-top-about__text">映画・CM・TV等あらゆる撮影に関する　機材オペレーティング・レンタルを行う会社です。</p>
        <ul class="p-top-about__items">
            <% cards.forEach(function(card) { %>
                <li class="p-top-about__item" data-section>
                    <div class="p-top-about__item-inner" data-section-inner>
                        <%- include(project + '/_p-about-item', {
                            img: card.img,
                            alt: card.alt,
                            text: card.text,
                            number: card.number,
                            btntext: card.btntext,
                            link: card.link,
                            color: card.color,
                        }) %>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>
</div>
