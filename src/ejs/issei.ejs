<% baseUrlPath='.' ; ejsPath='.' ; pageData="top" %>
<!DOCTYPE html>
<html lang="ja">
  <%- include(ejsPath + '/common/_head' ,{ baseUrl: baseUrlPath, page:
  json[pageData] }) %>

  <style>
    .ejs-style-title {
      margin-top: 120px;
      margin-bottom: 20px;
      background-color: rgba(0, 213, 255, 0.304);
      color: black;
    }
    .ejs-style-background {
      background-color: rgba(0, 174, 255, 0.304);
    }

    * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }
        .container {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: auto auto auto;
            gap: 10px;
            max-width: 1000px;
            margin: 20px auto;
            padding: 10px;
            background-color: #333;
        }
        .container div {
            background-color: #c4c4c4;
            height: 100px;
            border: 3px solid #000;
        }
        .header {
            grid-column: span 4;
            background-color: #333;
            color: white;
            text-align: center;
            font-size: 20px;
            padding: 10px;
        }
        .box1 { grid-column: span 1; }
        .box2 { grid-column: span 1; }
        .box3 { grid-column: span 1; }
        .box4 { grid-column: span 4; height: 200px; }
        .box5 { grid-column: span 2; height: 150px; }
        .box6 { grid-column: span 2; height: 150px; }
        .large-box {
            grid-column: span 4;
            height: 300px;
        }
  </style>

  <body>
    <%- include(ejsPath + '/common/_header' ) %>
    <main>
      
      <!-- 下層ページMV -->
      <%- include(ejsPath + '/project/_p-sub-mv', {heading_eng:' EQUIPMENT', heading_ja:'機材一覧'}) %>
      
      <!-- page topボタン -->
      <h2 class="ejs-style-title">page top</h2>
      <!-- prettier-ignore -->
      <%- include(ejsPath + '/component/_c-totop', { link: '#', text: 'PAGE TOP' }) %>

      <!-- ボタン① -->
      <h2 class="ejs-style-title">ボタン①</h2>
      <!-- prettier-ignore -->
      <%- include(ejsPath + '/component/_c-btn1', { link: '#', text: '特殊機材' }) %>

      <!-- ボタン② -->
      <h2 class="ejs-style-title">ボタン②</h2>
      <!-- prettier-ignore -->
      <%- include(ejsPath + '/component/_c-btn2', { link: '#', text: '機材一覧へ' }) %>

      <!-- 発信用ボタン -->
      <h2 class="ejs-style-title">発信用ボタン</h2>
      <!-- prettier-ignore -->
      <%- include(ejsPath + '/component/_c-send-btn', { 
        maillink: 'mailto:g.info1994@gmail.com', 
        phonelink: '042-486-1420',
        img: './assets/images/common/mail-icon.svg',
        alt: 'メールアイコン',
      }) %>

      <!--タブ -->
      <h2 class="ejs-style-title">タブ</h2>
      <!-- prettier-ignore -->
      <%- include(ejsPath + '/component/_c-tab' ,{text:'単体レンタル可', color:''}) %>

      <!--セクションタイトル -->
      <h2 class="ejs-style-title">セクションタイトル</h2>
      <!-- prettier-ignore -->
      <%- include(ejsPath + '/component/_c-section-heading', { heading_eng:'About', heading_ja:'有限会社グリフィス' }) %>

      <!--機材一覧用のパーツ -->
      <h2 class="ejs-style-title">機材一覧用のパーツ</h2>
      <!-- prettier-ignore -->
      <%- include(ejsPath + '/project/_p-crane-item', {
        img: "./assets/images/common/crane1.jpg",
        alt: "クレーン",
        title: 'GF-8',
        tabtext: '単体レンタル可',
        tabcolor: '',
        btnlink: '#',
        color: 'white'
      }) %>

      <!--パンくずリスト -->
      <h2 class="ejs-style-title">パンくずリスト</h2>
      <!-- prettier-ignore -->
      <%- include(ejsPath + '/component/_c-breadcrumb', { color:'', breadcrumb: [ { title:"equipment", url: "" },
      { title:"crane", url: "" } ] }); %>

      <!--サイドナビゲーション -->
      <h2 class="ejs-style-title">サイドナビゲーション</h2>
      <!-- prettier-ignore -->
      <%- include(ejsPath + '/project/_p-sidebar-nav' , {
        color: ''
       }) %>
       
    </main>
    <%- include(ejsPath + '/common/_footer' ) %>
  </body>
</html>
