<% baseUrlPath='.' ; ejsPath='.' ; pageData="about" %>
<!DOCTYPE html>
<html lang="ja">
  <%- include(ejsPath + '/common/_head' ,{ baseUrl: baseUrlPath, page:
  json[pageData] }) %>
  <body>
    <%- include(ejsPath + '/common/_header' , { btncolor:'' }); %>
    <main>
      <%- include(ejsPath + '/project/_p-sub-mv', {heading_eng:' ABOUT', heading_ja:'会社概要'}) %>

      <div class="p-about__img l-box fadeIn">
        <img src="./assets/images/common/company1.jpg" alt="桜の木の前に配置された大型クレーン">
      </div>
      <div class="p-about__bgcolor">
        <div class="p-about__inner l-inner">
          <div class="p-about__contents">
            <div class="p-about__info l-box fadeIn">
              <div class="p-about__heading p-about__heading--info">
                  <%- include(ejsPath + '/component/_c-section-heading', 
                  { page: 'company', 
                    heading_eng:'Company Info', 
                    heading_ja:'企業情報' ,
                    anima:''
                  }) %>
              </div>
              <div class="p-about__content">
                  <%- include(ejsPath + '/project/_p-about-info' ) %>
              </div>
            </div>
            <div class="p-about__access l-box fadeIn">
                <div class="p-about__heading">
                    <%- include(ejsPath + '/component/_c-section-heading', 
                    { page: 'company', 
                      heading_eng:'Access', 
                      heading_ja:'アクセス',
                      anima:'' }) %>
                </div>
                <div class="p-about__content">
                    <%- include(ejsPath + '/project/_p-about-access' ) %>
                </div>
            </div>
          </div>
        </div>
      </div>
      <div class="p-about__inner l-inner">
        <div class="p-about__contents">
          <div class="p-about__recruit l-box fadeIn">
              <div id="recruit" class="p-about__heading">
                  <%- include(ejsPath + '/component/_c-section-heading', 
                  { page: 'company', 
                    heading_eng:'Recruit', 
                    heading_ja:'採用情報',
                    anima:'' }) %>
              </div>
              <div class="p-about__content">
                  <%- include(ejsPath + '/project/_p-about-recruit' ) %>
              </div>
          </div>
          <div class="p-about__description l-box fadeIn">
              <div class="p-about__heading p-about__heading--endroll">
                  <%- include(ejsPath + '/component/_c-section-heading', 
                  { page: 'endroll', 
                    heading_eng:'「エンドロールに名を刻め」', 
                    heading_ja:'仕事内容について' ,
                    anima:''
                  }) %>
              </div>
              <div class="p-about__content">
                  <%- include(ejsPath + '/project/_p-about-description' ) %>
              </div>
          </div>
        </div>
      </div>
      <div class="p-about__inner p-about__inner--company l-inner">
        <div class="p-about__company l-box fadeIn">
          <%- include(ejsPath + '/project/_p-about-company' ) %>
        </div>
      </div>
  </main>
  <div class="l-about-footer">
    <%- include(ejsPath + '/common/_footer' ) %>
  </div>
  <div class="l-totop">
    <%- include(ejsPath + '/component/_c-totop', { link: '#', text: 'PAGE TOP' }) %>
  </div>
  </body>
</html>
